%body
  #wrapper
    / Main
    #main
      %section#intro.main
        .spotlight
          .content
            %header.major
              %h2 Welcome to the Client dashboard
              %p Here you are able to manage (view, add, update, delete) your current clients. Maybe the work of a client is done and paid and you want to delete the entry, or you want to add a new good-paying client.
              %br
              %p= link_to "Add a new client", new_client_path

      -@clients.each do |client|
        %section#intro.main
          .spotlight
            .content
              %header.major
                %h2= "Client: #{client.name}"
                %a.icon.fa-gear.alt{:href => "#{edit_client_path(client)}"}                  
                %p= "Email: #{client.email}"
                %br
                %p= client.description
                %p#clientlink= link_to "To the chat", client_path(client)
            %span.image= image_tag "pic01.jpg"
